generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String
  wallet   Wallet?
  trips    Trip[]
}

model Wallet {
  id        Int   @id @default(autoincrement())
  driverId  Int   @unique
  balance   Float @default(0)
  threshold Float @default(100)
  user      User  @relation(fields: [driverId], references: [id])
}

model Trip {
  id       Int       @id @default(autoincrement())
  driverId Int
  departAt DateTime
  arriveAt DateTime?
  duration Int?
  value    Float?
  status   String    @default("ongoing")
  user     User      @relation(fields: [driverId], references: [id])
}
